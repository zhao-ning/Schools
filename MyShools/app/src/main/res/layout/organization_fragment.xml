<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#00CCFF"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/o_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/head"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/o_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/is_ren_zheng"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:src="@drawable/auth" />

                <TextView
                    android:id="@+id/ren_zheng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_into_xiangqing"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/jiantou" />
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00CCFF"
                android:orientation="horizontal"
                android:id="@+id/up_activity"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ImageView android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add"
                   />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="发布活动"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00CCFF"
                android:orientation="horizontal"
                android:id="@+id/history_activity"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ImageView android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/t"
                    />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="历史活动"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    />



            </LinearLayout>
