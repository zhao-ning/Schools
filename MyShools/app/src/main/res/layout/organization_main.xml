<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/organization"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <ImageView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:src="@drawable/return1233"
            android:id="@+id/btn_return_main"/>

        <LinearLayout android:layout_width="0dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >
            <ImageView android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ab"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:id="@+id/organ_head_img"/>



            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/dialog_bg_shape"
                >
                <TextView android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/club_name"
                    android:text="创客俱乐部"
                    android:gravity="center"

                    />
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/club_sum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"

                        android:gravity="right" />
                    <LinearLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_height="wrap_content">

                        <ImageView android:layout_width="20dp"
                            android:scrollbars="vertical"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/huo"
                            />



                    </LinearLayout>



                </LinearLayout>

        </LinearLayout>
        </LinearLayout>

        <ImageView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
             android:text="简介："
                android:textColor="#000"
                android:textSize="18dp"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_jie_shao"
                android:layout_margin="10dp"
                />
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcd"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:textSize="18dp"
                />
                <TextView android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:id="@+id/content_lian"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcd"
                />

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史活动："
            android:textColor="#000"
            android:textSize="18dp"
            />
        <com.example.myshools.Activity.entity.NoScrollListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lishi_item"
            android:layout_margin="10dp"
            />
        </LinearLayout>

    </ScrollView>
</LinearLayout>