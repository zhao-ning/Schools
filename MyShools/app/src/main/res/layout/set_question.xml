<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#00CCFF">

        <Button
            android:id="@+id/btn_return_publish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:background="@drawable/fanhui32" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="问题表单"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="确认"
            android:id="@+id/set_question_ok"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/tixing"
            android:layout_width="30dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="15dp"
            android:textColor="@color/LightSlateGray"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="添加问题后单机修改问题，长按进行删除操作，不保存空白问题"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <ListView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/question_list"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/add_question"
            android:text="添加问题"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="@drawable/bg_apply"
            />

    </LinearLayout>







</LinearLayout>