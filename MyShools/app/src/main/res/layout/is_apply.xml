<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
   android:layout_height="200dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_gravity="center"
    android:padding="2dp"

    android:background="#fff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            />
        <TextView android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:text="友情提示"/>
        <TextView android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:id="@+id/dao_ji_shi"
            android:textSize="16dp"
            android:gravity="center_horizontal"
           />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:id="@+id/success_apply"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"/>
        <TextView android:layout_width="wrap_content"
        android:id="@+id/applying"
        android:layout_marginRight="10dp"
        android:layout_height="20dp"/>
        <TextView android:layout_width="wrap_content"
            android:id="@+id/apply_free"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        >

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:text=" 您的时间是否符合活动安排，不符合请勿申请，如果申请成功不能参加请提前两天取消参加，否则会扣掉相应的信誉积分"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout android:layout_width="0dp"
            android:layout_weight="1"
          android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="取消申请"
                android:textColor="#fff"
                android:background="@drawable/bg_apply"
                android:id="@+id/apply_no"
                />

        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="确认申请"
                android:textColor="#fff"
                android:background="@drawable/bg_apply"
                android:id="@+id/apply_ok"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>