<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_fragment"
    android:orientation="vertical">

        <LinearLayout
         android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_news_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00CCFF"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/school_img_path"
                android:layout_width="45dp"
                android:layout_height="45dp"
                />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/select_school_bg">

                <TextView
                    android:id="@+id/activity_select_school_name"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/activity_select_school_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/xiala" />

            </LinearLayout>
            <ImageButton
                android:id="@+id/add_activity_button"
                android:layout_width="30dp"
                android:layout_marginTop="-2dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/add_a" />


        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/school_news_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/app_color_white_transparent"
                android:orientation="horizontal" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tab_head_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>
</LinearLayout>